<!-- Mobile Nav Overlay -->
<div id="mobile-nav" class="fixed inset-0 bg-bg z-50 flex flex-col items-center justify-center gap-8 opacity-0 pointer-events-none transition-opacity duration-300 md:hidden">
	<button id="mobile-nav-close" class="absolute top-6 right-6 p-2 text-text" aria-label="Close menu">
		<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
		</svg>
	</button>
	<nav class="flex flex-col items-center gap-6 uppercase text-2xl tracking-tight italic" style="font-family: 'Tay Highbeams', sans-serif;">
		<a href="/#overview" class="mobile-nav-link text-text hover:text-accent transition-all duration-300 translate-y-4 opacity-0">Overview</a>
		<a href="/#bounties" class="mobile-nav-link text-text hover:text-accent transition-all duration-300 translate-y-4 opacity-0">Bounties</a>
