---
import "../styles/global.css";

const {
	title = "Have You Seen Me? â€” ChristmasTreeTurner.com",
	description = "A family mystery and public hunt for the origins of a full-size mechanical Christmas Tree Turner.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;600&family=Merriweather:wght@300;400;700&family=Oswald:wght@400;600;700&display=swap"
		/>
		<script
			type="module"
			src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"
		></script>
	</head>
	<body class="m-0 p-0 bg-bg text-text font-serif leading-relaxed tracking-normal overflow-x-hidden">
		<a class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-white text-text border border-border px-4 py-2 font-mono uppercase tracking-widest z-10" href="#main-content">Skip to content</a>
		<div class="fixed inset-0 bg-noise opacity-20 mix-blend-multiply pointer-events-none z-0" aria-hidden="true"></div>
		<div class="relative p-6 md:p-10 max-w-7xl mx-auto z-10">
			<slot />
		</div>
	</body>
</html>
