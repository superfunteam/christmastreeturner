---
import "../styles/global.css";

const {
	title = "Have You Seen Me? â€” ChristmasTreeTurner.com",
	description = "A family mystery and public hunt for the origins of a full-size mechanical Christmas Tree Turner.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="theme-color" content="#0f3b2f" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>

		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" href="/favicon.ico" />

		<!-- Open Graph / Social -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="https://christmastreeturner.com/images/unfurl.png" />
		<meta property="og:url" content="https://christmastreeturner.com" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content="https://christmastreeturner.com/images/unfurl.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;600&family=Merriweather:wght@300;400;700&family=Oswald:wght@400;600;700&display=swap"
		/>
		<script
			type="module"
			src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"
		></script>
		<!-- Preload 3D model for faster loading -->
		<link rel="preload" href="/christmas-tree-turner" as="fetch" crossorigin="anonymous" />
	</head>
	<body class="m-0 p-0 bg-bg text-text font-serif leading-relaxed tracking-normal overflow-x-hidden">
		<a class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-white text-text border border-border px-4 py-2 font-mono uppercase tracking-widest z-10" href="#main-content">Skip to content</a>
		<div class="fixed inset-0 bg-noise opacity-20 mix-blend-multiply pointer-events-none z-0" aria-hidden="true"></div>
		<div class="relative p-6 md:p-10 z-10">
			<slot />
		</div>
	</body>
</html>
